# =============================================================================
# WT POS & Payroll SaaS - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# All services used are free tier compatible

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
APP_NAME=WT POS & Payroll SaaS
APP_VERSION=1.0.0
APP_URL=http://localhost:8787
API_URL=http://localhost:8787/api
FRONTEND_URL=http://localhost:3000

# =============================================================================
# CLOUDFLARE WORKERS CONFIGURATION
# =============================================================================
# Get these from your Cloudflare dashboard
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
WORKER_NAME=wt-pos-payroll-saas

# D1 Database (Free tier: 1 database, 100MB storage)
D1_DATABASE_NAME=wt-pos-payroll-db
D1_DATABASE_ID=your-d1-database-id

# KV Namespace (Free tier: 100,000 reads/day, 1,000 writes/day)
KV_NAMESPACE_ID=your-kv-namespace-id
KV_PREVIEW_NAMESPACE_ID=your-kv-preview-namespace-id

# R2 Storage (Free tier: 10GB storage, 1M Class A operations, 10M Class B operations)
R2_BUCKET_NAME=wt-pos-payroll-storage
R2_PREVIEW_BUCKET_NAME=wt-pos-payroll-storage-preview

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Generate a strong secret key (32+ characters)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
REFRESH_TOKEN_EXPIRES_IN=30d

# Password hashing
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS settings
CORS_ORIGIN=http://localhost:3000,https://your-domain.com
CORS_CREDENTIALS=true

# =============================================================================
# PHILIPPINE BUSINESS CONFIGURATION
# =============================================================================
# Company information
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=Your Company Address
COMPANY_PHONE=+63-XXX-XXX-XXXX
COMPANY_EMAIL=info@yourcompany.com
COMPANY_WEBSITE=https://yourcompany.com

# Business registration
BUSINESS_REGISTRATION_NUMBER=your-business-registration-number
TIN_NUMBER=your-tin-number
SSS_NUMBER=your-sss-number
PHILHEALTH_NUMBER=your-philhealth-number
PAG_IBIG_NUMBER=your-pag-ibig-number

# Philippine tax rates (2024)
SSS_RATE=0.045
PHILHEALTH_RATE=0.03
PAG_IBIG_RATE=0.02
WITHHOLDING_TAX_RATE=0.20

# Minimum wage by region (PHP per day)
MINIMUM_WAGE_NCR=610
MINIMUM_WAGE_REGION_1=420
MINIMUM_WAGE_REGION_2=420
MINIMUM_WAGE_REGION_3=470
MINIMUM_WAGE_REGION_4A=520
MINIMUM_WAGE_REGION_4B=320
MINIMUM_WAGE_REGION_5=365
MINIMUM_WAGE_REGION_6=450
MINIMUM_WAGE_REGION_7=435
MINIMUM_WAGE_REGION_8=365
MINIMUM_WAGE_REGION_9=365
MINIMUM_WAGE_REGION_10=365
MINIMUM_WAGE_REGION_11=438
MINIMUM_WAGE_REGION_12=365
MINIMUM_WAGE_CAR=420
MINIMUM_WAGE_CARAGA=365
MINIMUM_WAGE_BARMM=365

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# D1 Database connection (handled by Cloudflare Workers)
# No additional configuration needed for D1

# =============================================================================
# FILE STORAGE & UPLOADS
# =============================================================================
# R2 Storage configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv
UPLOAD_PATH=uploads

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =============================================================================
# Using free email services like Gmail SMTP or SendGrid free tier
EMAIL_PROVIDER=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourcompany.com
EMAIL_FROM_NAME=WT POS & Payroll System

# Alternative: SendGrid (free tier: 100 emails/day)
# SENDGRID_API_KEY=your-sendgrid-api-key

# =============================================================================
# SMS CONFIGURATION (Optional - for notifications)
# =============================================================================
# Using free SMS services like Twilio free tier
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Cloudflare Analytics (free tier)
CLOUDFLARE_ANALYTICS_TOKEN=your-analytics-token

# Error tracking (optional - using free services)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development settings
DEBUG=true
LOG_REQUESTS=true
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# Test database
TEST_DATABASE_NAME=wt-pos-payroll-test-db
TEST_DATABASE_ID=your-test-database-id

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_POS=true
ENABLE_PAYROLL=true
ENABLE_INVENTORY=true
ENABLE_ANALYTICS=true
ENABLE_REPORTS=true
ENABLE_MOBILE_APP=true
ENABLE_OFFLINE_MODE=true
ENABLE_PWA=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_DARK_MODE=true

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# Payment gateway (using free tier services)
PAYMENT_GATEWAY=stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Alternative: PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Backup settings
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=backups

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# KV Cache settings
CACHE_TTL=3600
SESSION_TTL=86400
API_CACHE_TTL=300

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
# Compression
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6

# Caching
ENABLE_CACHE=true
CACHE_MAX_AGE=31536000

# Rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_ENABLED=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Security headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSP=true
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000

# Session security
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log levels
LOG_LEVEL_ERROR=true
LOG_LEVEL_WARN=true
LOG_LEVEL_INFO=true
LOG_LEVEL_DEBUG=false

# Log formats
LOG_FORMAT=json
LOG_TIMESTAMP=true

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
# Language settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fil
FALLBACK_LANGUAGE=en

# Locale settings
DEFAULT_LOCALE=en-PH
SUPPORTED_LOCALES=en-PH,fil-PH

# =============================================================================
# TIMEZONE & DATE SETTINGS
# =============================================================================
# Timezone
DEFAULT_TIMEZONE=Asia/Manila
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:mm:ss
DATETIME_FORMAT=YYYY-MM-DD HH:mm:ss

# =============================================================================
# CURRENCY & FORMATTING
# =============================================================================
# Currency settings
DEFAULT_CURRENCY=PHP
CURRENCY_SYMBOL=â‚±
CURRENCY_POSITION=before
DECIMAL_PLACES=2
THOUSANDS_SEPARATOR=,
DECIMAL_SEPARATOR=.

# Number formatting
NUMBER_FORMAT=#,##0.00
PERCENTAGE_FORMAT=#,##0.00%

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Notification preferences
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_IN_APP_NOTIFICATIONS=true

# Notification types
NOTIFY_LOW_STOCK=true
NOTIFY_SALES_REPORTS=true
NOTIFY_PAYROLL_REMINDERS=true
NOTIFY_SYSTEM_ALERTS=true

# =============================================================================
# API RATE LIMITS (Free tier limits)
# =============================================================================
# Cloudflare Workers free tier: 100,000 requests/day
# D1 Database free tier: 1,000,000 reads/day, 100,000 writes/day
# R2 Storage free tier: 10GB storage
API_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_PER_HOUR=1000
API_RATE_LIMIT_PER_DAY=10000

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Deployment settings
DEPLOYMENT_ENVIRONMENT=development
DEPLOYMENT_BRANCH=main
AUTO_DEPLOY=true
ROLLBACK_ENABLED=true

# Health check
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=300000

# =============================================================================
# CUSTOMIZATION
# =============================================================================
# Branding
BRAND_COLOR_PRIMARY=#2563eb
BRAND_COLOR_SECONDARY=#1e40af
BRAND_COLOR_ACCENT=#f59e0b
BRAND_LOGO_URL=https://your-domain.com/logo.png

# UI Settings
THEME_DEFAULT=light
THEME_AUTO_DETECT=true
SIDEBAR_COLLAPSED=false
COMPACT_MODE=false

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================
# Beta features (use with caution)
ENABLE_BETA_FEATURES=false
ENABLE_EXPERIMENTAL_APIS=false
ENABLE_DEBUG_MODE=false
ENABLE_PERFORMANCE_MONITORING=false 